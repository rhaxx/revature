package com.revature;

public class Converter {

	
	public static void main(String[] args) {
		System.out.println(convertToHex(33));
	}
	
	static String convertToHex(int x) {
		// simple cases
		if (x < 10) return "0x"+Integer.toString(x);
		if (x == 10) return "0xa";
		if (x == 11) return "0xb";
		if (x == 12) return "0xc";
		if (x == 13) return "0xd";
		if (x == 14) return "0xe";
		if (x == 15) return "0xf";
		
		int intR = x%16; // saving the remainder
		String strR = "";
		if (intR < 10) strR = Integer.toString(intR);
		if (intR == 10) strR = "a";
		if (intR == 11) strR = "b";
		if (intR == 12) strR = "c";
		if (intR == 13) strR = "d";
		if (intR == 14) strR = "e";
		if (intR == 15) strR = "f";
		
		int count = 0;
		while (x / 16 > 0) {
			x = x / 16;
			count++;
		}
		
		//System.out.println(count);
		return "0x"+ Integer.toString(count) + strR;
	}
}
